<style>
  .sticky-nav {
    position: sticky;
    top: 0;
    z-index: 1000;
  }

  .content-section {
    padding: 30px;
  }

  .section-style {
    border: solid;
    border-radius: 0.5rem;
    border-color: var(--onyx);
  }

  .section-style p {
    padding: 0 15px 0 15px;
  }

  .about-me {
    margin-top: -20px;
  }

  .personal-projects,
  .why-shoejs,
  .now,
  .reading-tracker {
    margin-top: 20px;
  }

  .button-wrapper {
    margin: 0 auto;
    width: fit-content;
    padding-bottom: 10px;
  }

  .cv-button {
    background-color: var(--onyx);
    color: var(--sandy-brown);
    border: none;
    padding: 12px 24px;
    font-size: 16px;
    text-decoration: none;
    border-radius: 8px;
    cursor: pointer;
    display: inline-flex;
    align-items: center;
    gap: 8px;
    transition:
      background-color 0.3s ease,
      transform 0.2s ease;
    font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .cv-button:hover {
    background-color: var(--sandy-brown);
    color: var(--onyx);
    transform: translateY(-2px);
  }

