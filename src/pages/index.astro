  .name-span {
    font-style: italic;
    color: var(--tomato);
  }

  .table-wrapper {
    overflow-x: scroll;
    margin: 5px;
  }

  table,
  th,
  td {
    border: 0.5px solid var(--onyx);
    border-collapse: collapse;
    margin: 15px auto;
    padding: 7px;
    text-align: center;
  }

  tr:hover {
    background-color: var(--onyx);
    color: var(--sandy-brown);
