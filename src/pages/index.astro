<style>
  .sticky-nav {
    position: sticky;
    top: 0;
    z-index: 1000;
  }

  .section-syle {
    border: solid;
    border-radius: 0.5rem;
    border-color: var(--onyx);
  }

  .section-syle p {
    padding: 0 15px 0 15px;
  }

  .about-me {
    margin-top: 20px;
  }

  .button-wrapper {
    margin: 0 auto;
    width: fit-content;
    padding-bottom: 10px;
  }

  .cv-button {
    background-color: var(--onyx);
    color: var(--sandy-brown);
    border: none;
    padding: 12px 24px;
    font-size: 16px;
    border-radius: 8px;
    cursor: pointer;
    display: inline-flex;
    align-items: center;
    gap: 8px;
    transition:
      background-color 0.3s ease,
      transform 0.2s ease;
    font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .cv-button:hover {
    background-color: var(--sandy-brown);
    color: var(--onyx);
    transform: translateY(-2px);
  }

  .now {
    margin-top: 10px;
  }

  .why-shoejs {
    margin-top: 10px;
  }

  .name-span {
    font-style: italic;
    color: var(--tomato);
  }

  .horizontal-line {
    border: none;
    border-radius: 8px;
    height: 3px;
    background-color: var(--onyx);
    margin: 15px auto 5px auto;
  }

  .date-modified {
    text-align: right;
    padding-right: 5px;
    font-size: small;
  }
</style>
