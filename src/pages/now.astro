</Layout>

<style>
    table, th, td {
        border: 1px solid var(--night);
        border-collapse: collapse;
        padding: 20px;
        margin-left: auto;
        margin-right: auto;
    }

    tr:nth-child(odd) {
       background-color: rgba(20, 92, 158, 0.65);
    }

    .week {
        text-align: center;
    }

    .check-mark {
        color: var(--malachite);
        font-weight:800;
    }

    .ballot-box {
        color: var(--night);
        font-weight: 800;
    }

    .career ul {
       margin-top: 3px;
       margin-bottom: 20px;
    }

    .career p {
        margin-bottom: 5px;
    }

    .aspects {
        margin-bottom: 0;
    }

    .equipment-list ul {
        margin-top: 0;
    }

</style>
